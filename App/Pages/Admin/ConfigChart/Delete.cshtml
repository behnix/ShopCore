@page
@model App.Pages.Admin.ConfigChart.DeleteModel

@{
    ViewData["Title"] = "حذف مشخصه";
    Layout = "_Admin";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>@ViewData["Title"]</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/admin">خانه</a>
            </li>
            <li>
                <a href="/admin/faq/">مدیریت مشخصه ها</a>
            </li>
            <li class="active">
                @ViewData["Title"]
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>آیا از حذف این سوال مشخصه دارید؟</h5>
                </div>
                <div class="ibox-content">

                    <p>
                        @Html.DisplayNameFor(model => model.ConfigChart.Title) :
                        @Html.DisplayFor(model => model.ConfigChart.Title)
                    </p>
                    <p>
                        @Html.DisplayNameFor(model => model.ConfigChart.Name) :
                        @Html.DisplayFor(model => model.ConfigChart.Name)
                    </p>
                    <br />
                    <form method="post">
                        <input type="hidden" asp-for="ConfigChart.Id" />
                        <input type="submit" value="بله مشخصه حذف شود؟" class="btn btn-danger btn-sm" />
                        <a asp-page="Index" class="btn btn-info btn-sm">بازگشت</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
