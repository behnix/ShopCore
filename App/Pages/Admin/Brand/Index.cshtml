@page
@model App.Pages.Admin.Brand.IndexModel

@{
    ViewData["Title"] = "مدیریت برندها";
    Layout = "_Admin";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>@ViewData["Title"]</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a href="/admin">خانه</a>
            </li>
            <li>
                @ViewData["Title"]
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <a asp-page="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i>  افزودن برند جدید</a>
                </div>
                <div class="ibox-title">
                    <h5>لیست برندها</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Brand[0].Logo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Brand[0].Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Brand[0].EnName)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var i = 1;}
                            @foreach (var item in Model.Brand.OrderByDescending(p => p.Id))
                            {
                            <tr>
                                <td class="pt-20">
                                    @(i++)
                                </td>
                                <td class="pt-20">
                                    <img src="/assets/brands/@item.Logo" alt="logo" style="height:30px" />
                                </td>
                                <td class="pt-20">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="pt-20">
                                    @Html.DisplayFor(modelItem => item.EnName)
                                </td>
                                <td class="pt-15">
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"> ویرایش</a>
                                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"> حذف</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
