@page
@using App.Core.Convertors
@model App.Pages.Admin.Page.IndexModel

@{
    ViewData["Title"] = "مدیریت صفحه ها";
    Layout = "_Admin";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>مدیریت صفحه ها</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a href="/admin">خانه</a>
            </li>
            <li>
                مدیریت صفحه ها
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <a asp-page="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i>  افزودن صفحه جدید</a>
                </div>
                <div class="ibox-title">
                    <h5>لیست صفحه ها</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Page[0].PageTitle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Page[0].PageCreateDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Page[0].PageVisit)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Page[0].PageShortUrl)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var i = 1;}
                            @foreach (var item in Model.Page.OrderByDescending(p => p.PageId))
                            {
                            <tr>
                                <td class="pt-20">
                                    @(i++)
                                </td>
                                <td class="pt-20">
                                    @Html.DisplayFor(modelItem => item.PageTitle)
                                </td>
                                <td class="pt-20">
                                    @item.PageCreateDate.ToShamsi()
                                </td>
                                <td class="pt-20">
                                    @Html.DisplayFor(modelItem => item.PageVisit)
                                </td>
                                <td class="pt-20 text-right" style="direction: ltr !important">
                                    /p/@item.PageShortUrl
                                </td>
                                <td class="pt-15">
                                    <a href="/p/@item.PageShortUrl" target="_blank" class="btn btn-info btn-sm"> مشاهده </a>
                                    <a asp-page="./Edit" asp-route-id="@item.PageId" class="btn btn-warning btn-sm"> ویرایش</a>
                                    <a asp-page="./Delete" asp-route-id="@item.PageId" class="btn btn-danger btn-sm"> حذف</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

