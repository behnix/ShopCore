@page
@model App.Pages.Admin.Slider.IndexModel

@{
    ViewData["Title"] = "لیست اسلایدرها";
    Layout = "~/Pages/Shared/_Admin.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>@ViewData["Title"]</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/admin">خانه</a>
            </li>
            <li>
                <a href="/admin/Slider/">اسلایدرها</a>
            </li>
            <li class="active">
                @ViewData["Title"]
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <a asp-page="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i>  افزودن اسلایدر جدید</a>
                </div>
                <div class="ibox-title">
                    <h5>لیست برندها</h5>
                </div>
                <div class="ibox-content table-responsive">
                    <table class="table table-striped table-responsive">
                        <thead>
                            <tr>
                                <th style="width: 25%">
                                    @Html.DisplayNameFor(model => model.Slider[0].SliderName)
                                </th>
                                <th style="width: 25%">
                                    @Html.DisplayNameFor(model => model.Slider[0].SliderImage)
                                </th>
                                <th style="width: 15%">
                                    @Html.DisplayNameFor(model => model.Slider[0].SliderType)
                                </th>
                                <th style="width: 10%">
                                    @Html.DisplayNameFor(model => model.Slider[0].IsActive)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Slider)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SliderName)
                                    </td>
                                    <td>
                                        <img src="/assets/sliders/@item.SliderImage" alt="image" class="w-25"/>
                                    </td>
                                    <td>
                                        @if (item.SliderType == 1)
                                        {
                                           @:دائمی
                                        }
                                        else
                                        {
                                            @: بازه زمانی
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                        <span class="label label-primary">فعال</span>
                                        }
                                        else
                                        {
                                        <span class="label label-danger">غیر فعال</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-page="./Edit" asp-route-id="@item.SliderId" class="btn btn-warning btn-sm"> ویرایش</a>
                                        <a asp-page="./Delete" asp-route-id="@item.SliderId" class="btn btn-danger btn-sm"> حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>





