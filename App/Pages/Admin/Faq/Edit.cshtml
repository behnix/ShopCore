@page
@model App.Pages.Admin.Faq.EditModel

@{
    ViewData["Title"] = "ویرایش سوال";
    Layout = "_Admin";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>ویرایش سوال</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/admin">خانه</a>
            </li>
            <li>
                <a href="/admin/faq/">سوالات متداول</a>
            </li>
            <li class="active">
                ویرایش سوال
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>ویرایش سوال</h5>
                </div>
                <div class="ibox-content">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Faq.FaqId" />
                        <input type="hidden" asp-for="Faq.FaqLike" />
                        <input type="hidden" asp-for="Faq.FaqName" />
                        <input type="hidden" asp-for="Faq.FaqEmail" />
                        <input type="hidden" asp-for="Faq.FaqDateTime" />
                        <input type="hidden" asp-for="Faq.FaqIsPublished" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" name="Faq.FaqName" value="System" />
                        <div class="form-group">
                            <label asp-for="Faq.FaqQuestion" class="control-label"></label>
                            <textarea asp-for="Faq.FaqQuestion" rows="6" class="form-control"></textarea>
                            <span asp-validation-for="Faq.FaqQuestion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Faq.FaqAnswer" class="control-label"></label>
                            <textarea asp-for="Faq.FaqAnswer" rows="6" class="form-control"></textarea>
                            <span asp-validation-for="Faq.FaqAnswer" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="ثبت تغییرات" class="btn btn-primary btn-sm" />
                            <a asp-page="Index" class="btn btn-danger btn-sm">بازگشت</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
