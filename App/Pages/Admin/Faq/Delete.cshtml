@page
@model App.Pages.Admin.Faq.DeleteModel

@{
    ViewData["Title"] = "حذف سوال";
    Layout = "_Admin";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>افزودن سوال جدید</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/admin">خانه</a>
            </li>
            <li>
                <a href="/admin/faq/">سوالات متداول</a>
            </li>
            <li class="active">
                حذف سوال
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>آیا از حذف این سوال اطمینان دارید؟</h5>
                </div>
                <div class="ibox-content">
                    
                    <p>
                        @Html.DisplayNameFor(model => model.Faq.FaqQuestion) :
                        @Html.DisplayFor(model => model.Faq.FaqQuestion)
                    </p>
                    <p>
                        @Html.DisplayNameFor(model => model.Faq.FaqAnswer) :
                        @Html.DisplayFor(model => model.Faq.FaqAnswer)
                    </p>
                    <br />
                    <form method="post">
                        <input type="hidden" asp-for="Faq.FaqId" />
                        <input type="submit" value="بله سوال حذف شود؟" class="btn btn-danger btn-sm"/>
                        <a asp-page="Index" class="btn btn-info btn-sm">بازگشت</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>