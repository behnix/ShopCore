@page
@model App.Pages.Admin.Group.EditModel

@{
    ViewData["Title"] = "ویرایش گروه";
    Layout = "_Admin";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>ویرایش گروه</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/admin">خانه</a>
            </li>
            <li>
                <a href="/admin/Group">گروه ها</a>
            </li>
            <li class="active">
                ویرایش گروه
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>ویرایش گروه</h5>
                </div>
                <div class="ibox-content">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Group.GroupId" />
                        <div class="form-group">
                            <label asp-for="Group.GroupTitle" class="control-label"></label>
                            <input asp-for="Group.GroupTitle" class="form-control" />
                            <span asp-validation-for="Group.GroupTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="ثبت تغییرات"  class="btn btn-primary btn-sm" />
                            <a asp-page="Index" class="btn btn-danger btn-sm">بازگشت</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
