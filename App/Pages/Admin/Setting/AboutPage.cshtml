@page
@model App.Pages.Admin.Setting.AboutPageModel

@{
    ViewData["Title"] = "تنظیمات سایت";
    Layout = "_Admin";
}




<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>تنظیمات کلی</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a href="/admin">خانه</a>
            </li>
            <li>
                ویرایش تنظیمات کلی
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>ویرایش تنظیمات کلی</h5>
                </div>
                <div class="ibox-content">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Setting.SettingId" />
                        <input type="hidden" asp-for="Setting.SiteName" />
                        <input type="hidden" asp-for="Setting.SiteDescription" />
                        <input type="hidden" asp-for="Setting.SiteTel" />
                        <input type="hidden" asp-for="Setting.SiteAddress" />
                        <input type="hidden" asp-for="Setting.SiteEmail" />
                        <input type="hidden" asp-for="Setting.SiteEmailPassword" />
                        <input type="hidden" asp-for="Setting.SiteSmtp" />
                        <input type="hidden" asp-for="Setting.SiteSmsNumber" />
                        <input type="hidden" asp-for="Setting.SiteSmsSigniture" />
                        <input type="hidden" asp-for="Setting.SiteTelegramId" />
                        <input type="hidden" asp-for="Setting.SiteInstagramId" />
                        <input type="hidden" asp-for="Setting.SiteTwitterId" />
                        <input type="hidden" asp-for="Setting.SiteFacebookId" />
                        <input type="hidden" asp-for="Setting.SiteCopyRightText" />
                        <input type="hidden" asp-for="Setting.Index" />
                        <input type="hidden" asp-for="Setting.Slogan1" />
                        <input type="hidden" asp-for="Setting.Slogan2" />
                        <input type="hidden" asp-for="Setting.Service1" />
                        <input type="hidden" asp-for="Setting.Service1Icon" />
                        <input type="hidden" asp-for="Setting.Service1Description" />
                        <input type="hidden" asp-for="Setting.Service2" />
                        <input type="hidden" asp-for="Setting.Service2Icon" />
                        <input type="hidden" asp-for="Setting.Service2Description" />
                        <input type="hidden" asp-for="Setting.Service3" />
                        <input type="hidden" asp-for="Setting.Service3Icon" />
                        <input type="hidden" asp-for="Setting.Service3Description" />
                        <input type="hidden" asp-for="Setting.Service4" />
                        <input type="hidden" asp-for="Setting.Service4Icon" />
                        <input type="hidden" asp-for="Setting.Service4Description" />
                        <input type="hidden" asp-for="Setting.ContactTitle" />
                        <input type="hidden" asp-for="Setting.ContactDescription" />
                        <input type="hidden" asp-for="Setting.FaqTitle" />
                        <input type="hidden" asp-for="Setting.FaqDescription" />
                        <input type="hidden" asp-for="Setting.FaqText" />
                        <input type="hidden" asp-for="Setting.SiteNameInEnglish" />
                        <input type="hidden" asp-for="Setting.QuantityPostInIndex" />
                        <input type="hidden" asp-for="Setting.SmtpPort" />

                        <div class="form-group">
                            <label asp-for="Setting.AboutUsTitle" class="control-label"></label>
                            <input asp-for="Setting.AboutUsTitle" class="form-control" />
                            <span asp-validation-for="Setting.AboutUsTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Setting.AboutUsDescription" class="control-label"></label>
                            <textarea asp-for="Setting.AboutUsDescription" rows="3" class="form-control"></textarea>
                            <span asp-validation-for="Setting.AboutUsDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">قالب آماده محتوا</label>
                            <select id="templates" class="form-control">
                                <option>لطفا یک قالب انتخاب نمائید</option>
                                <option value="Template_1">قالب آماده بدون تصویر</option>
                                <option value="Template_2">قالب آماده همراه با تصویر</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Setting.AboutUs" class="control-label"></label>
                            <textarea asp-for="Setting.AboutUs" rows="3" class="form-control"></textarea>
                            <span asp-validation-for="Setting.AboutUs" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="ثبت تغییرات" class="btn btn-primary btn-sm" />
                            <a asp-page="Index" class="btn btn-danger btn-sm">بازگشت</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Setting_AboutUs', 
            {
                customConfig: '/adminAssets/js/Config.js'
            });
        CKEDITOR.config.allowedContent = true;
        var templates = {};
        templates["Template_1"] = "<h2 class='h3 text-center text-green font-weight-bold py-3'>تیتر H2</h2><p class='h6 text-center rtl px-5 text-secondary line-height-24'>پاراگراف </p><h3 class='h5 text-center text-green font-weight-bold py-3'>تیتر H3</h3><p class='h6 text-center rtl px-5 text-secondary line-height-24'>پاراگراف </p>";
        templates["Template_2"] = "<h2 class='h3 text-center text-green font-weight-bold py-3'>تیتر H2</h2><p class='h6 text-center rtl px-5 text-secondary line-height-24'>پاراگراف </p><div class='my-3 text-center'><img src='/assets/posts/thumb/defualtImage.jpg' class='img-thumbnail' /></div><h3 class='h5 text-center text-green font-weight-bold py-3'>تیتر H3</h3><p class='h6 text-center rtl px-5 text-secondary line-height-24'>پاراگراف </p><div class='my-3 text-center'><img src='/assets/posts/thumb/defualtImage.jpg' class='img-thumbnail' /></div>";
        $('#templates').change(function () {
            var template = $(this).val();
            CKEDITOR.instances["Setting_AboutUs"].setData(templates[template]);
        });
    </script>
}
