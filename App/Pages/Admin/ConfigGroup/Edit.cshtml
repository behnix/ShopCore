@page
@model App.Pages.Admin.ConfigGroup.EditModel

@{
    ViewData["Title"] = "ویرایش گروه مشخصات";
    Layout = "~/Pages/Shared/_Admin.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>@ViewData["Title"]</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/admin">خانه</a>
            </li>
            <li>
                <a href="/admin/product">محصولات</a>
            </li>
            <li class="active">
                @ViewData["Title"]
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewData["Title"]</h5>
                </div>
                <div class="ibox-content">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ConfigGroup.Id" />
                        <input type="hidden" asp-for="ConfigGroup.Order" />
                        <input type="hidden" asp-for="ConfigGroup.CategoryId" />
                        <div class="form-group">
                            <label asp-for="ConfigGroup.Name" class="control-label"></label>
                            <input asp-for="ConfigGroup.Name" class="form-control" />
                            <span asp-validation-for="ConfigGroup.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfigGroup.Title" class="control-label"></label>
                            <input asp-for="ConfigGroup.Title" class="form-control" />
                            <span asp-validation-for="ConfigGroup.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="ثبت تغییرات" class="btn btn-primary btn-sm" />
                            <a asp-page="../ConfigChart/Index" class="btn btn-danger btn-sm">بازگشت</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
