@page
@model AboutModel
@{
    ViewData["Title"] = "درباره ما";
}
<div class="breadcrumb-area bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul>
                    <li class="breadcrumb-item"><a href="/">خانه</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="content-wraper mt-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="about-info-wrapper">
                    <h2>شرکت ما</h2>
                    <p>@Html.Raw(Model.Setting.Result.AboutUs)</p>
                </div>
            </div>
        </div>
    </div>
</div>            
<div class="testimonials-area">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-lg-8">
                <div class="owl-carousel">
                    <div class="single-testimonial text-center">
                        <p>@Html.Raw(Model.Setting.Result.AboutUsDescription)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
