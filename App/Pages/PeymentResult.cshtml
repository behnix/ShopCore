@page
@model App.Pages.PeymentResultModel
@{
    ViewData["Title"] = "نتیجه پرداخت";
}

<div class="breadcrumb-area bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul>
                    <li class="breadcrumb-item"><a href="/">خانه</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="content-wraper bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="table-content mt-60">
                    <table class="table">
                        <tr>
                            <td>
                                @if (Model.Invoice.Purchased)
                                {
                                    <div class="form-group">
                                        <label class="col-sm-12 col-form-label text-success">@Html.Raw(Model.Invoice.State)</label>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12 col-form-label"> شماره فاکتور @Model.Invoice.Id</label>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12 col-form-label"> کد رهگیری @Model.Invoice.RefNum</label>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label class="col-sm-12 col-form-label text-danger">@Html.Raw(Model.Invoice.State)</label>
                                    </div>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="about-info-wrapper py-5">
        </div>
    </div>
</div>
