@page "/register"
@model App.Pages.Account.RegisterModel

@{
    ViewData["Title"] = "ثبت نام";
}
<div class="breadcrumb-area bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul>
                    <li class="breadcrumb-item"><a href="/">خانه</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="content-wraper login-register-area bg-gray">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="customer-login-register">
                    <h3 class="text-center">ثبت نام</h3>
                    <div class="login-Register-info">
                        <form method="post" class="p-3">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <p class="coupon-input form-row-first">
                                        <label asp-for="User.FirstName" class="control-label"></label>
                                        <input asp-for="User.FirstName" />
                                    </p>
                                    <p class="coupon-input form-row-first">
                                        <label asp-for="User.LastName" class="control-label"></label>
                                        <input asp-for="User.LastName" />
                                    </p>
                                    <p class="coupon-input form-row-first">
                                        <label asp-for="User.UserName" class="control-label"></label>
                                        <input asp-for="User.UserName" />
                                    </p>
                                    <p class="coupon-input form-row-first">
                                        <label asp-for="User.Email" class="control-label"></label>
                                        <input asp-for="User.Email" />
                                    </p>
                                    <p class="coupon-input form-row-first">
                                        <label asp-for="User.Password" class="control-label"></label>
                                        <input asp-for="User.Password" type="password" />
                                    </p>
                                    <p class="coupon-input form-row-first">
                                        <label asp-for="User.ConfirmPassword" class="control-label"></label>
                                        <input asp-for="User.ConfirmPassword" type="password" />
                                    </p>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12 py-4 px-3">
                                    <p class="px-3 text-justify">با ثبت نام در سایت از مزایای خرید آنلاین، اطلاع از آخرین پیشنهادات ویژه، دریافت تخفیف های سایت و قابلیت نظر دهی در مورد محصولات، استفاده نمائید.</p>
                                    <p class="px-3 text-justify">برای ثبت نام در سایت می بایست <a href="/terms" class="text-danger">شرایط و مقررات</a> را مطالعه نمائید.</p>

                                    <div class="form-group px-3">
                                        <p class="text-danger">
                                            <label><input type="checkbox" value="1"><span>شرایط ثبت نام را می پذیرم</span></label>
                                        </p>
                                        <div>
                                            <button class="btn btn-success" type="submit">ثبت نام</button>
                                            <a href="/login" class="btn btn-danger text-white">ورود به سایت</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
