@page "/EditProfile"
@model App.Pages.Account.EditProfileModel

@{
    ViewData["Title"] = "ویرایش مشخصات کاربری";
}


<div class="breadcrumb-area bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul>
                    <li class="breadcrumb-item"><a href="/">خانه</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="content-wraper bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-sm-12 col-12 order-2 order-lg-1">
                <div class="categories-blog-area mt-60">
                    <div class="single-categories-1">
                        <div class="single-categories-blog">
                            <img src="/assets/avatars/@Model.UserArea.UserAvatar" alt="@Html.Raw(Model.UserArea.FirstName) @Html.Raw(Model.UserArea.LastName)" />
                            <ul class="text-left my-5">
                                <li><i class="fa fa-edit"></i> <a href="./EditProfile">ویرایش مشخصات کاربری</a></li>
                                <li><i class="fa fa-user"></i> <a href="#">تغییر تصویر پروفایل</a></li>
                                <li><i class="fa fa-key" aria-hidden="true"></i> <a href="#">تغییر کلمه عبور</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 order-1 order-lg-2">
                <div class="categories-blog-area mt-60">
                    <div class="single-categories-1">
                        <h3 class="blog-categorie-title">@ViewData["Title"]</h3>
                        <div class="row mb-5">
                            <div class="col-md-12">
                                <form method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="UserArea.Id" />
                                    <input type="hidden" asp-for="UserArea.RegisteredOn" />
                                    <input type="hidden" asp-for="UserArea.UserAvatar" />
                                    <input type="hidden" asp-for="UserArea.GeneratedKey" />
                                    <input type="hidden" asp-for="UserArea.Roles" />
                                    <input type="hidden" asp-for="UserArea.Logins" />
                                    <input type="hidden" asp-for="UserArea.Claims" />
                                    <input type="hidden" asp-for="UserArea.Tokens" />
                                    <input type="hidden" asp-for="UserArea.NormalizedUserName" />
                                    <input type="hidden" asp-for="UserArea.UserName" />
                                    <input type="hidden" asp-for="UserArea.Email" />
                                    <input type="hidden" asp-for="UserArea.NormalizedEmail" />
                                    <input type="hidden" asp-for="UserArea.EmailConfirmed" />
                                    <input type="hidden" asp-for="UserArea.PasswordHash" />
                                    <input type="hidden" asp-for="UserArea.SecurityStamp" />
                                    <input type="hidden" asp-for="UserArea.ConcurrencyStamp" />
                                    <input type="hidden" asp-for="UserArea.PhoneNumberConfirmed" />
                                    <input type="hidden" asp-for="UserArea.TwoFactorEnabled" />
                                    <input type="hidden" asp-for="UserArea.LockoutEnd" />
                                    <input type="hidden" asp-for="UserArea.AccessFailedCount" />
                                    <div class="form-group">
                                        <label class="control-label" for="UserArea_FirstName">نام </label>
                                        <input asp-for="UserArea.FirstName" class="form-control" />
                                        <span asp-validation-for="UserArea.FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="UserArea_LastName">نام خانوادگی</label>
                                        <input asp-for="UserArea.LastName" class="form-control" />
                                        <span asp-validation-for="UserArea.LastName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="UserArea_Age">سن </label>
                                        <input asp-for="UserArea.Age" class="form-control" />
                                        <span asp-validation-for="UserArea.Age" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="UserArea_Gender">جنسیت </label>
                                        <select asp-for="UserArea.Gender" class="form-control">
                                            <option value="Male" Selected>مرد</option>
                                            <option value="Female">زن</option>
                                        </select>
                                        <span asp-validation-for="UserArea.Gender" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="UserArea_CellPhone">شماره موبایل </label>
                                        <input asp-for="UserArea.CellPhone" class="form-control" />
                                        <span asp-validation-for="UserArea.CellPhone" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="UserArea_PhoneNumber">تلفن </label>
                                        <input asp-for="UserArea.PhoneNumber" class="form-control" />
                                        <span asp-validation-for="UserArea.PhoneNumber" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="UserArea_Address">آدرس </label>
                                        <textarea asp-for="UserArea.Address" class="form-control" rows="2"></textarea>
                                        <span asp-validation-for="UserArea.Address" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="UserArea_ZipCode">کدپستی </label>
                                        <input asp-for="UserArea.ZipCode" class="form-control" />
                                        <span asp-validation-for="UserArea.ZipCode" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="بروز رسانی پروفایل" class="btn btn-success" />
                                        <a href="/userArea" class="btn btn-danger">بازگشت</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
