@page
@model App.Pages.Account.SendCodeModel
@{
    ViewData["Title"] = "ارسال کد تائید";
}

<div class="breadcrumb-area bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul>
                    <li class="breadcrumb-item"><a href="/">خانه</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="content-wraper mt-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="about-info-wrapper">
                    <h2>@ViewData["Title"]</h2>

                    <form method="post" class="p-3">

                        <input asp-for="SendCode.RememberMe" type="hidden" />
                        <input asp-for="SendCode.ReturnTo" type="hidden" />

                        <div class="form-group">
                            <select asp-for="SendCode.SelectedProvider" asp-items="Model.SendCode.Providers"></select>
                        </div>

                        <span asp-validation-for="SendCode.SelectedProvider" class="text-danger"></span>

                        <hr />

                        <input type="submit" class="btn btn-success" />

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

